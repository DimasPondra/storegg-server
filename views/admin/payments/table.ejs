<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No.</th>
            <th>Payment Type</th>
            <th>Bank</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% for (let i = 0; i < payments.length; i++){ %>
        <tr>
            <td><%= i + 1 %></td>
            <td><%= payments[i].type %></td>
            <td>
                <% payments[i].banks.forEach( bank => { %>
                <span class="badge badge-warning">
                    <%= bank.name %> - <%= bank.bankName %> - <%= bank.accountNumber %>
                </span>
                <% }) %>
            </td>
            <td>
                <% if (payments[i].status == 'Y') { %>
                <span class="badge badge-success">Active</span>
                <% } else { %>
                <span class="badge badge-danger">Inactive</span>
                <% } %>
            </td>
            <td>
                <form action="/payment/delete/<%= payments[i]._id %>?_method=DELETE" method="post">
                    <a href="/payment/edit/<%= payments[i]._id %>" class="btn btn-warning">
                        <i class="fas fa-pencil-alt mr-2"></i>
                        Edit
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash mr-2"></i>
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>
